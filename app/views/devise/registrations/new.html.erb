<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
  <div class="col-md-6 col-lg-5">
    <div class="card shadow-sm border-0">
      <div class="card-body p-4">

        <h2 class="text-center mb-3" style="color:#7a5a2c;">
          Crear cuenta
        </h2>

        <p class="text-muted text-center mb-4">
          Regístrate para comprar en Aceites Piedra Colgada.
        </p>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="mb-3">
            <%= f.label :name, "Nombre completo", class: "form-label fw-semibold" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :rut, "RUT (sin puntos ni guion)", class: "form-label fw-semibold" %>
            <%= f.number_field :rut, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :email, "Correo electrónico", class: "form-label fw-semibold" %>
            <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "Contraseña", class: "form-label fw-semibold" %>
            <% if @minimum_password_length %>
              <small class="text-muted d-block mb-1">
                Mínimo <%= @minimum_password_length %> caracteres.
              </small>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "Confirmar contraseña", class: "form-label fw-semibold" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="form-check mb-3">
            <%= f.check_box :accept_terms, class: "form-check-input" %>
            <%= f.label :accept_terms, "Acepto los términos y condiciones", class: "form-check-label" %>
          </div>

          <div class="d-grid mt-3 mb-2">
            <%= f.submit "Registrarme", class: "btn btn-success" %>
          </div>
        <% end %>

        <hr class="my-4">

        <div class="text-center">
          <span class="text-muted me-1">¿Ya tienes cuenta?</span>
          <%= link_to "Inicia sesión", new_session_path(resource_name), class: "text-decoration-none" %>
        </div>

      </div>
    </div>
  </div>
</div>
