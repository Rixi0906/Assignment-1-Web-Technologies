<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
  <div class="col-md-5">
    <div class="card shadow-sm border-0">
      <div class="card-body p-4">

        <h2 class="text-center mb-3" style="color:#7a5a2c;">
          Cambiar contraseña
        </h2>

        <p class="text-muted text-center mb-4">
          Escribe tu nueva contraseña y confírmala.
        </p>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="mb-3">
            <%= f.label :password, "Nueva contraseña", class: "form-label fw-semibold" %>
            <% if @minimum_password_length %>
              <small class="text-muted d-block mb-1">
                Mínimo <%= @minimum_password_length %> caracteres.
              </small>
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "Confirmar nueva contraseña", class: "form-label fw-semibold" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="d-grid mt-3 mb-2">
            <%= f.submit "Guardar nueva contraseña", class: "btn btn-success" %>
          </div>
        <% end %>

        <hr class="my-4">

        <div class="text-center">
          <%= link_to "Volver a iniciar sesión", new_session_path(resource_name), class: "text-decoration-none" %>
        </div>

      </div>
    </div>
  </div>
</div>
