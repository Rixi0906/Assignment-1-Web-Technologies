<div class="container py-5" style="max-width: 640px;">
  <h1 class="h3 text-center mb-4">Crear cuenta</h1>

  <% if @user && @user.errors.any? %>
    <div class="alert alert-danger">
      <strong>Revisa los siguientes campos:</strong>
      <ul class="mb-0">
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @user, url: register_path, class: "card p-4 shadow-sm", data: { turbo: false } do |f| %>
    <div class="row g-3">
      <div class="col-md-6">
        <%= f.label :first_name, "Nombre", class: "form-label" %>
        <%= f.text_field :first_name, class: "form-control", required: true %>
      </div>
      <div class="col-md-6">
        <%= f.label :last_name, "Apellido", class: "form-label" %>
        <%= f.text_field :last_name, class: "form-control", required: true %>
      </div>

      <div class="col-12">
        <%= f.label :rut, "RUT (Sin puntos ni guión)", class: "form-label" %>
        <%= f.text_field :rut, class: "form-control", placeholder: "123456789", required: true %>
      </div>

      <div class="col-12">
        <%= f.label :email, "Email", class: "form-label" %>
        <%= f.email_field :email, class: "form-control", placeholder: "tu@email.com", required: true %>
      </div>

      <div class="col-md-6">
        <%= f.label :password, "Contraseña", class: "form-label" %>
        <%= f.password_field :password, class: "form-control", minlength: 8, required: true %>
        <div class="form-text">Mínimo 8 caracteres.</div>
      </div>
      <div class="col-md-6">
        <%= f.label :password_confirmation, "Confirmar contraseña", class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control", required: true %>
      </div>

      <div class="col-12">
        <div class="form-check">
          <%= f.check_box :accept_terms, class: "form-check-input", required: true, id: "accept_terms" %>
          <%= f.label :accept_terms, "Acepto los Términos y Condiciones", class: "form-check-label" %>
        </div>
      </div>
    </div>

    <div class="d-grid mt-4">
      <%= f.submit "Crear cuenta", class: "btn btn-success" %>
    </div>
  <% end %>

  <p class="text-center mt-3 mb-0">
    ¿Ya tienes cuenta?
    <%= link_to "Inicia sesión", login_path, class: "text-decoration-none" %>
  </p>
</div>
