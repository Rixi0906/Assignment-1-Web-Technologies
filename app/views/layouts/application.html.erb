<!DOCTYPE html>
<html>
  <head>
    <title>Aceites Piedra Colgada</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body class="bg-light">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom shadow-sm">
      <div class="container-fluid px-5">
        <!-- Brand -->
        <%= link_to root_path, class: "navbar-brand d-flex align-items-center" do %>
          <img src="<%= asset_path('logo.png') %>" alt="Aceites Piedra Colgada" height="40" class="me-2">
          <span class="fw-bold text-uppercase">Aceites Piedra Colgada</span>
        <% end %>

        <!-- Toggle for mobile -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
          aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Links (centered) -->
        <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
          <ul class="navbar-nav mb-2 mb-lg-0">
            <li class="nav-item mx-2"><%= link_to "Inicio", root_path, class: "nav-link" %></li>
            <li class="nav-item mx-2"><%= link_to "Nosotros", about_path, class: "nav-link" %></li>
            <li class="nav-item mx-2"><%= link_to "Productos", products_path, class: "nav-link" %></li>
            <li class="nav-item mx-2"><%= link_to "Contacto", contact_path, class: "nav-link" %></li>
          </ul>
        </div>

        <!-- Right side icons -->
        <ul class="navbar-nav d-flex align-items-center ms-auto">
          <li class="nav-item me-3">
            <%= link_to login_path, class: "nav-link" do %>
              <i class="bi bi-person me-1"></i> Iniciar sesión
            <% end %>
          </li>
          <li class="nav-item me-3">
            <%= link_to register_path, class: "nav-link" do %>
              <i class="bi bi-pencil-square me-1"></i> Registrarse
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to cart_path, class: "nav-link position-relative" do %>
              <i class="bi bi-cart3 me-1"></i>
              Carrito
              <% if cart_count.positive? %>
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-success">
                  <%= cart_count %>
                  <span class="visually-hidden">productos en el carrito</span>
                </span>
              <% end %>
            <% end %>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Main content -->
    <main class="container-fluid p-0">
      <%= yield %>
    </main>

    <!-- Footer -->
    <footer class="text-center text-muted py-3 mt-5 border-top">
      © <%= Time.current.year %> Aceites Piedra Colgada
    </footer>

    <!-- Toasts for flash messages -->
    <%= render "shared/flash_toast" %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>

    <!-- Auto-show toasts on full loads and Turbo visits -->
    <script>
      function showToasts() {
        document.querySelectorAll('.toast').forEach(function(t) {
          new bootstrap.Toast(t).show();
        });
      }
      document.addEventListener('DOMContentLoaded', showToasts);
      document.addEventListener('turbo:load', showToasts);
    </script>
  </body>
</html>
