<%= form_with model: [@product, @product_variant],
              class: "card p-4 shadow-sm", local: true do |f| %>

  <% if @product_variant.errors.any? %>
    <div class="alert alert-danger">
      <strong>Revisa los siguientes campos:</strong>
      <ul class="mb-0">
        <% @product_variant.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :size, "TamaÃ±o", class: "form-label" %>
    <%= f.text_field :size, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :price, "Precio", class: "form-label" %>
    <%= f.number_field :price, step: 0.01, min: 0,
                       class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :stock, "Stock", class: "form-label" %>
    <%= f.number_field :stock, min: 0, step: 1,
                       class: "form-control", required: true %>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit class: "btn btn-success" %>
    <%= link_to "Cancelar", @product, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
